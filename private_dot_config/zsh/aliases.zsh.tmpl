alias untar='tar -zxvf'
alias c='clear'
alias gdb='gdb --ex run --args'

# Improve cd
alias cd='z'
alias cd..='z ..'
alias ..='z ../'
alias ...='z ../../..'
alias ....='z ../../../..'

